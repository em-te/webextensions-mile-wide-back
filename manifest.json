{
  "name": "Mile Wide Back",
  "author": "Terry",
  "version": "0.2.9",
  "description": "__MSG_extensionDescription__",
  "manifest_version": 2,
  "default_locale": "en",
  "homepage_url": "https://github.com/em-te",
  "icons": {
    "24": "mile_wide_back_24.png",
    "30": "mile_wide_back_30.png",
    "48": "mile_wide_back_48.png",
    "96": "mile_wide_back_96.png"
  },

  "permissions": [
    "<all_urls>", "storage"
  ],

  "optional_permissions": [
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start"
    }
  ],

  "options_ui": {
    "page": "options.htm"
  }
}